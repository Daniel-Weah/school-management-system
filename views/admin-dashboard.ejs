<body>
 
 <header>
  <%- include('layouts/adminSidebar')%>
 </header>


<main style="margin-top: 58px;">

  
 <div class="container pt-4">
   <nav aria-label="breadcrumb" class="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
       <a href="/">Home</a>
      </li> 
      <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
    </ol>
  </nav>

   <h1 class="pt-4">Administrative Dashboard</h1>
   <div class="feed shadow-sm" style="text-align: center; margin-top: -1pc;">


   <% if (users.user_role == 'Admin') { %>

    
   
    <!-- Card 1: Level -->
    <div class="card">
      <i class="fas fa-graduation-cap fa-fw" style="font-size: 30px; color: #007bff;"></i> 
      <h5 style="font-size: 15px;"> Students</h5>
      <h5 style="text-transform: capitalize;">
        <%= totalStudent < 10 ? '0' + totalStudent : totalStudent %>
      </h5>
          </div>

    <div class="card">
      <i class="fa fa-user" style="font-size: 30px; color: #007bff;"></i> 
      <h5 style="font-size: 15px;"> Instructor</h5>
      <h5 style="text-transform: capitalize;"> <%= totalInstructor < 10 ? '0' + totalInstructor : totalInstructor %></h5>
    </div>
  
    
    <!-- <div class="card">
     <i class="fas fa-user fa-fw" style="font-size: 30px; color: #007bff;"></i> 
      <h5 style="font-size: 15px;"> Admin</h5>
      <h5>1</h5>
    </div> -->
    <div class="card">
     <i class="fa fa-user" style="font-size: 30px; color: #007bff;"></i>
     <h5 style="font-size: 15px;"> Parents</h5>
   
     <h5 style="text-transform: capitalize;"> 10 </h5>

    <% } %>
    </div>
        
   
  </div>
  <%- include('./calendar') %>

  
  <div class="accordion accordion-flush" id="accordionFlushExample" style="width: 70%;margin-top: 10px;margin-left: 12px;">
   <div class="accordion-item">
     <h2 class="accordion-header" id="flush-headingOne">
       <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
         <h4>Activities</h4>
       </button>
     </h2>
     <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
       <div class="accordion-body">
        <h6>On-Going Activities</h6>
        <p>No Activity at this moment</p>
       </div>
     </div>
   </div>
 </div>


 
