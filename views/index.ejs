    <script>
        let year = document.getElementById('year');
        let currentYear = new Date().getFullYear();
        year.textContent = currentYear;
    
        document.getElementById('feedbackForm').addEventListener('submit', (e) => {
            e.preventDefault();
    
            const formData = new FormData(e.target); // Collect form data
            const email = formData.get('email'); // Get the email from the form
    
            // Validate the email before submitting the form
            if (!validateEmail(email)) {
                Swal.fire({
                    title: 'Error!',
                    text: 'Please enter a valid email address.',
                    icon: 'error',
                    showConfirmButton: false,
                    timer: 2000
                });
                return; 
            }
    
            // Proceed to send the form data if the email is valid
            fetch('/feedback', {
                method: 'POST',
                body: formData // Send form data
            })
            .then(response => response.json()) // Convert the response to JSON
            .then(data => {
                if (data.ok) {
                    Swal.fire({
                        title: 'Success!',
                        text: 'Feedback sent successfully!',
                        icon: 'success',
                        showConfirmButton: false,
                        timer: 2000
                    }).then(() => {
                        document.getElementById('feedbackForm').reset(); // Clear the form
                    });
                } else {
                    Swal.fire({
                        title: 'Error',
                        text: 'An error occurred in sending your feedback',
                        icon: 'error',
                        showConfirmButton: false,
                        timer: 2000
                    });
                }
            })
            .catch(error => {
                Swal.fire({
                    title: 'Error',
                    text: 'There was a problem sending your feedback. Please try again later.',
                    icon: 'error',
                    showConfirmButton: false,
                    timer: 2000
                });
                console.error('Error:', error);
            });
        });
    
        // Function to validate email format
        function validateEmail(email) {
            const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/; 
            return re.test(String(email).toLowerCase());
        }
    </script>
    
    
 
