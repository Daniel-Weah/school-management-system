<%- include('layouts/header')%>
<link rel="stylesheet" href="/css/dashboard.css" />

<style>
  .breadcrumb {
    font-family: 'Ubuntu', sans-serif;
    font-weight: 500;
    font-size: 14px;
    padding: 10px;
    background-color: #f8f9fa;
    border-radius: 5px;
}

.breadcrumb-item a {
    text-decoration: none;
    color: #007bff;
}

.breadcrumb-item.active {
    color: #6c757d;
}
.breadcrumb-item + .breadcrumb-item::before {
      content: " > ";
    }
.subject_main {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
}

.details {
    background-color: #ffffff;
    border-radius: 10px;
    padding: 3rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.details h4 {
    margin: 0;
    font-weight: bold;
    color: #333;
}

.details h6 {
    margin-top: 5px;
    font-size: 12px;
}

footer {
    margin-top: 3rem;
    text-align: center;
    font-size: 14px;
    color: #666;
}

footer p {
    margin: 0;
}

.container h1 {
    font-size: 2rem;
    font-weight: bold;
    color: #333;
    margin-bottom: 20px;
}

 
</style>
</head>

<body>
 
 <header>
  <%- include('layouts/subjectDetailSidebar')%>
 </header>

  
  <main style="margin-top: 58px;">
    <div class="container pt-4">
      <!-- Breadcrumb Navigation -->
      <nav aria-label="breadcrumb" class="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="/">Home</a>
          </li>
          <li class="breadcrumb-item">
            <a href="/dashboard">Dashboard</a>
          </li>
          <li class="breadcrumb-item">
            <a href="/subject">Subjects</a>
          </li>
          <li class="breadcrumb-item active" aria-current="page">Assessments</li>
        </ol>
      </nav>
  
      <!-- Page Title -->
      <h1 class="pt-4"> </h1>

        <h1>Create a Quiz</h1>
        <form action="/create/quiz" method="POST">
          <label for="quiz_title">Quiz Title:</label>
          <input type="text" name="quiz_title" required><br>
        
          <label for="quiz_type">Quiz Type:</label>
          <select name="quiz_type">
            <option value="quiz">Quiz</option>
            <option value="test">Test</option>
          </select><br>
        
          <label for="quiz_duration">Quiz Duration (in minutes):</label>
          <input type="number" name="quiz_duration" min="1" required><br>
        
          <label for="students">Select Students:</label>
          <select name="students[]" multiple>
            <option value="student_id_1">Student 1</option>
            <option value="student_id_2">Student 2</option>
          </select><br>
        
          <label for="questions">Quiz Questions (JSON format):</label>
          <textarea name="questions" required></textarea><br>
        
          <button type="submit">Create Quiz</button>
        </form>
        <!-- ========================= ENDS ======================== -->
  

      <!-- ======================= STUDENT'S SIDE ================ -->

    


      <!-- ===================== INSTRUCTOR'S SIDE ================== --> 
    
          <hr>
      <footer>
        <p>&copy; BrainWave 2024. All Rights Reserved.</p>
      </footer>
    </div>
  </main>
  
    

   <%- include('layouts/footer')%>




