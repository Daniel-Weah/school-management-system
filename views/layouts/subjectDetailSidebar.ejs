<!--Main Navigation-->
<style>
    .initials-avatar {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    background-color: #f94b8e;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 16px;
    font-weight: bold;
  }

  .list-group a span{
    padding: 0.5rem;
    transition: all 0.5s ease-in-out;
  }
  .list-group a span:hover{
    background-color: rgb(193, 191, 191);
    border-radius: 20px;
  }
  </style>
  <header>
  
     <nav id="sidebarMenu" class="collapse d-lg-block sidebar collapse bg-light mt-2" style="overflow-y: scroll;">
         <div class="position-sticky">
            <h1 class="text-muted" style="text-align: center; font-size: 2rem;"><%= user.subject_name %> </h1>

           <h1 class="text-muted" style="text-align: center; font-size: 8rem; margin-bottom: -3pc; margin-top: -2pc;text-transform: uppercase;">
            <%= firstLetter %>
           </h1>
           <br>
           <hr>
           <div class="list-group list-group-flush mx-3 mt-4">

  
          <!-- ================= STUDENT PART OF THE SIDEBAR ===========-->
         
          <a href="/assessment" class="list-group-item list-group-item-action py-2 ripple">
            <i class="fas fa-book fa-fw me-3"></i><span>Assessment</span>
          </a>
          <a href="/assignment" class="list-group-item list-group-item-action py-2 ripple">
            <i class="fas fa-graduation-cap fa-fw me-3"></i><span>Assignment</span>
          </a>
          <a href="/notes" class="list-group-item list-group-item-action py-2 ripple">
            <i class="fas fa-file fa-fw me-3"></i><span>Notes</span>
          </a>
          <a href="https://studyclass.me/" class="list-group-item list-group-item-action py-2 ripple" target="_blank">
            <i class="fa-fw me-3"><img src="/images/studyClassLogo.png" alt="study class logo" style="width: 100px;"></i><span>Study Class</span>
          </a>
        
        </div>
      </div>
    </nav>
    <!-- Sidebar -->
  
   <!-- Navbar -->
   <nav id="main-navbar" class="navbar navbar-expand-lg navbar-light bg-white fixed-top shadow-sm" style="padding: 0;">
     <div class="container-fluid">
       <!-- Toggle button -->
       <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
         <i class="fas fa-bars"></i>
        </button>
        
       <!-- Brand -->
       <a class="navbar-brand" href="/" style="padding: 0.5rem;">       
         <h4 style="letter-spacing: 5px;font-size: 1.5rem;color: #d8363a;font-weight: bold;">BWSMS</h4>
        </a>
        
        <!-- Right links -->
        <ul class="navbar-nav ms-auto d-flex flex-row">
          <!-- Notification dropdown -->
          <li class="nav-item">
            <a class="nav-link me-3 me-lg-0" style="margin-top: 5px; font-size: 1.2rem;" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fas fa-bell"></i>
              <span class="badge rounded-pill bg-danger">1</span>
            </a>
            
          </li>
          
          
          
         <!-- Icon -->
         <li class="nav-item">
           <a class="nav-link" href="#" style="margin-top: 5px; font-size: 1.2rem;">
             <i class="fa fa-comment"></i>
           </a>
         </li>
  
        
         
         <li class="nav-item dropdown">
           <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <% if (users.profile_picture.length === 2) { %>
              <div class="initials-avatar">
                  <%= users.profile_picture %>
              </div>
          <% } else { %>
              <img src="data:image/png;base64,<%= users.profile_picture.toString('base64') %>" alt="Profile Picture" width="100" height="100">
          <% } %>
              
           </a>
           <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuLink">
             <div class="profile_info" style="text-align: center;">
              <% if (users.profile_picture.length === 2) { %>
                <div class="initials-avatar" style="margin: 0 auto;">
                    <%= users.profile_picture %>
                </div>
            <% } else { %>
                <img src="data:image/png;base64,<%= users.profile_picture.toString('base64') %>" alt="Profile Picture" width="100" height="100">
            <% } %>           
            <h6><%= userID.username %> </h6>
            </div>
             <li><a class="dropdown-item" href="#"><i class="fas fa-user"></i>
             </i> My profile</a></li>
             <li><a class="dropdown-item" href="#"> <i class="fas fa-cogs fa-fw"></i>
             </i> Settings</a></li>
             <li><a class="dropdown-item" href="/logout">Logout</a></li>
           </ul>
         </li>
       </ul>
     </div>
     <!-- Container wrapper -->
   </nav>
   <!-- Navbar -->
  </header>
  <!--Main Navigation-->
  
  
  