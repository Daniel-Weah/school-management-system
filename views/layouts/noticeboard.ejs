<!-- Notice sidebar -->
<div class="notice">
 <h5 class="mt-3">Notice Board</h5>
 <hr>
 <div class="notice_details1">
  <% if (notices.length > 0) { %>
    <% notices.forEach(notice => { %>
      <div class="notice_text" style="padding: 0.5rem">
        <h4><%= notice.title %></h4>
        <h6><%= notice.description %></h6>
        <h6>Sent: <%= notice.created_at %></h6>
        <% if (notice.image) { %>
          <img src="data:image/jpeg;base64,<%= notice.image %>" alt="Notice Image" style="width: 100%;height: 100px; padding: 0;">
        <% } else { %>
          <p>No image available</p>
        <% } %>
        <hr>
      </div>
    <% }) %> 
  <% } else { %>
    <p>No notice available</p> 
  <% } %>
</div>



</div>