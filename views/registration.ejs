<%- include('layouts/header')%>
<link rel="stylesheet" href="/css/student.css" />
<style>
  /* Style checkboxes to appear vertically */
#junior-classes input[type="checkbox"],
#senior-classes input[type="checkbox"] {
  display: block;
  margin-bottom: 10px; /* Add spacing between checkboxes */
}

/* Optionally, adjust the labels for better alignment */
#junior-classes label,
#senior-classes label {
  display: inline-block;
  margin-left: 5px; /* Space between checkbox and label */
}
.breadcrumb-item + .breadcrumb-item::before {
      content: " > ";
    }
    .breadcrumb{
      font-family: 'Ubuntu', sans-serif;
      font-weight: 500;
      margin-top: -1.2pc;
    }


</style>
</head>
<body>
 <header>
  <%- include('layouts/adminSidebar')%>
 </header>
 <section class="h-100" style="background-color: #fff;">
  <div class="container py-5 h-100" >
    
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">
                <nav aria-label="breadcrumb" class="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Instructors</li>
                  </ol>
                </nav>
                
                <div class="text-center mt-3">
                  <h4 class="mt-1 mb-3 pb-1"> REGISTRATION</h4>
                </div>

                <form action="/registration" method="post" autocomplete="off">
                 
                 <div class="mb-4">
                   <label class="form-label" for="full name">Full Name</label>
                   <input type="text" id="full_name" name="fullname" class="form-control" placeholder="e.g. John Doe" />
                 </div>

                 <div class="mb-4">
                   <label class="form-label" for="email">Email</label>
                   <input type="email" id="email" name="email" class="form-control" placeholder="e.g. johndoe@example.com" />
                 </div>

                 <div class="mb-4">
                   <label class="form-label" for="phone">Phone</label>
                   <input type="tel" id="phone" name="phone" class="form-control" placeholder="e.g. 077XXXXXXX / 088XXXXXXX" />
                 </div>

                 <div class="mb-4">
                   <label class="form-label" for="location">Location</label>
                   <input type="tel" id="location" name="location" class="form-control" placeholder="e.g. 12th street sinkor" />
                 </div>

                 <div class="mb-4">
                   <label class="form-label" for="dob">DOB</label>
                   <input type="date" id="dob" name="dob" class="form-control" placeholder="date of birth" />
                 </div>

                 <div class="mb-4">
                  <label class="form-label" for="division">Division</label>
                  <select name="division" id="division" class="form-control">
                    <option value="select-division">Select Division</option>
                    <option value="junior-high">Junior High Level</option>
                    <option value="senior-high">Senior High Level</option>
                  </select>
                </div>
                
                <div class="mb-4" id="junior-classes" style="display: none;">
                  <label class="form-label">Junior High Classes</label>
                  <input type="checkbox" name="junior-classes" value="7th Grade" id="7th-grade"><label for="7th-grade">7th Grade</label>
                  <input type="checkbox" name="junior-classes" value="8th Grade" id="8th-grade"><label for="8th-grade">8th Grade</label>
                  <input type="checkbox" name="junior-classes" value="9th Grade" id="9th-grade"><label for="9th-grade">9th Grade</label>
                </div>
                
                <div class="mb-4" id="senior-classes" style="display: none;">
                  <label class="form-label">Senior High Classes</label>
                  <input type="checkbox" name="senior-classes" value="10th Grade" id="10th-grade"><label for="10th-grade">10th Grade</label>
                  <input type="checkbox" name="senior-classes" value="11th Grade" id="11th-grade"><label for="11th-grade">11th Grade</label>
                  <input type="checkbox" name="senior-classes" value="12th Grade" id="12th-grade"><label for="12th-grade">12th Grade</label>

                </div>
                
                

                 <div class="mb-4">
                  <label class="form-label" for="role">Role</label>
                   <select name="role" id="role" class="form-control">
                    <% roles.forEach(role => { %>
                    <option value="<%= role.role_id %>"><%= role.role %></option>
                    <% }) %>
                   </select>
                </div>

                <div class="mb-4">
                  <label class="form-label" for="school">School</label>
                  <!-- Visible input to display the school name -->
                  <input 
                    type="text" 
                    id="school" 
                    class="form-control" 
                    value="<%= users.user_school %>" 
                    placeholder="School Name" 
                    disabled 
                  >
                  
                  <!-- Hidden input to store the school ID for database saving -->
                  <input 
                    type="hidden" 
                    name="school" 
                    value="<%= users.school_id %>"
                  >
                </div>
                

                <div class="mb-4">
                  <label class="form-label" for="position">Position</label>
                  <select name="position" id="position" class="form-control">
                    <option value="" disabled selected>Select Position</option>
                    <% positions.forEach(position => { %> 
                      <option value="<%= position.position_id %>"><%= position.position %></option>
                    <% }) %>
                  </select>
                </div>

<hr>
<!-- ==================== EMERGENCY INFO =============== -->
<cite>Emergency Contact Information</cite>
<hr>
                 <div class="mb-4">
                   <label class="form-label" for="emergency name">Full Name</label>
                   <input type="tel" id="emergency_name" name="emergency_name" class="form-control" placeholder="Emergency Name" />
                 </div>

                 <div class="mb-4">
                   <label class="form-label" for="emergency phone">Phone</label>
                   <input type="tel" id="emergency_phone" name="emergency_phone" class="form-control" placeholder="Phone" />
                 </div>

                 <div class="mb-4">
                   <label class="form-label" for="emergency relationship">Relationship</label>
                   <input type="tel" id="emergency_relationship" name="emergency_relationship" class="form-control" placeholder="Relationship" />
                 </div>
<!-- ==================== EMERGENCY INFO ENDS =============== -->
<hr>

<div class="mb-4">
 <label class="form-label" for="studentID">Username</label>
 <input type="text" id="username" name="username" class="form-control" placeholder="username e.g. @johndoe123" />
</div>
                
                  <div class="mb-4">
                    <label class="form-label" for="password">Password</label>
                    <input type="password" id="password" name="password"  placeholder="password" class="form-control" />
                  </div>

                  <div class="text-center pt-1 ">
                    <button class="btn btn-primary btn-lg btn-block mb-3" type="submit" style="width: 100%;" id="student_btn">Register Student <i class="fa fa-arrow-right" id="right-arrow"></i></button>
                   </div>

                 

                </form>

              </div>
            </div>
            <div class="col-lg-6 d-flex align-items-center" style="background: linear-gradient(45deg, #ff416c, #ff4b2b);">
              <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                <h4 class="mb-4">STUDENT'S REGISTRATION </h4>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  document.getElementById('division').addEventListener('change', function () {
  const division = this.value;
  const juniorHighClasses = document.getElementById('junior-classes');
  const seniorHighClasses = document.getElementById('senior-classes');

  if(division === 'select-division') {
    juniorHighClasses.style.display = 'none';
    seniorHighClasses.style.display = 'none';
  }
 else if (division === 'junior-high') {
    juniorHighClasses.style.display = 'flex';
    seniorHighClasses.style.display = 'none';
  } else if (division === 'senior-high') {
    juniorHighClasses.style.display = 'none';
    seniorHighClasses.style.display = 'block';
  }
});

</script>
<%- include('layouts/footer')%>










         