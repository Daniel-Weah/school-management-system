<%- include('layouts/header')%>
<link rel="stylesheet" href="/css/student.css" />
<style>
  .breadcrumb-item + .breadcrumb-item::before {
      content: " > ";
    }
    .breadcrumb{
      font-family: 'Ubuntu', sans-serif;
      font-weight: 500;
    }
</style>
</head>
<body>
 <header>
  <%- include('layouts/sidebar')%>
 </header>
 <section class="h-100" style="background-color: #fff;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">
                <nav aria-label="breadcrumb" class="breadcrumb mt-2">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                     <a href="/">Home</a>
                    </li> 
                    <li class="breadcrumb-item">
                     <a href="/dashboard">Dashboard</a>
                    </li> 
                    <li class="breadcrumb-item active" aria-current="page">Notice</li>
                  </ol>
                </nav>
                <div class="text-center">
                  <h4 class="mt-1 mb-3 pb-1">CREATE NOTICE</h4>
                </div>

                <form action="/create-notice" method="post" autocomplete="off" enctype="multipart/form-data">

                  <div class="mb-3">
                    <label class="form-label" for="school">School</label>
                    <!-- Visible input to display the school name -->
                    <input 
                      type="text" 
                      id="school" 
                      class="form-control" 
                      value="<%= users.user_school %>" 
                      placeholder="School Name" 
                      disabled 
                    >
                    
                    <!-- Hidden input to store the school ID for database saving -->
                    <input 
                      type="hidden" 
                      name="school" 
                      value="<%= users.school_id %>"
                    >
                  </div>
                  
                 
                 <div class="mb-4">
                   <label class="form-label" for="title">Title</label>
                   <input type="text" id="title" name="title" class="form-control" placeholder="e.g. Notice Title" required/>
                 </div>

                 <div class="mb-4">
                   <label class="form-label" for="title">Description</label>
                   <textarea name="description" class="form-control" id="description" cols="30" rows="10" required></textarea>
                 </div>

                 <div class="mb-4">
                   <label class="form-label" for="image">Image (optional)</label>
                  <input type="file" name="image" id="image" accept=".jpg, .jpeg, .png" placeholder="optional"/>
                  
                 </div>


                  <div class="text-center pt-1 ">
                    <button class="btn btn-primary btn-lg btn-block mb-3" type="submit" style="width: 100%;" id="student_btn">Send Notice <i class="fa fa-arrow-right" id="right-arrow"></i></button>
                   </div>

                </form>

              </div>
            </div>
            <div class="col-lg-6 d-flex align-items-center" style="background: linear-gradient(45deg, #ff416c, #ff4b2b);">
              <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                <h4 class="mb-4">CREATE NOTICE </h4>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('layouts/footer')%>
